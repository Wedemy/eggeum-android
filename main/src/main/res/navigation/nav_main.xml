<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/nav_main"
  app:startDestination="@id/fragment_home">


  <fragment
    android:id="@+id/fragment_home"
    android:name="us.wedemy.eggeum.android.main.ui.HomeFragment"
    android:label="HomeFragment"
    tools:layout="@layout/fragment_home" />

  <fragment
    android:id="@+id/fragment_search"
    android:name="us.wedemy.eggeum.android.main.ui.SearchFragment"
    android:label="SearchFragment"
    tools:layout="@layout/fragment_search">

    <action
      android:id="@+id/action_fragment_search_to_search_cafe_fragment"
      app:destination="@id/fragment_search_cafe"
      app:enterAnim="@anim/nav_default_enter_anim"
      app:exitAnim="@anim/nav_default_exit_anim"
      app:popEnterAnim="@anim/nav_default_pop_enter_anim"
      app:popExitAnim="@anim/nav_default_pop_exit_anim" />

  </fragment>

  <fragment
    android:id="@+id/fragment_my_account"
    android:name="us.wedemy.eggeum.android.main.ui.MyAccountFragment"
    android:label="MyAccountFragment"
    tools:layout="@layout/fragment_my_account" />
  <fragment
    android:id="@+id/fragment_search_cafe"
    android:name="us.wedemy.eggeum.android.main.ui.SearchCafeFragment"
    android:label="SearchCafeFragment"
    tools:layout="@layout/fragment_search_cafe" />

</navigation>