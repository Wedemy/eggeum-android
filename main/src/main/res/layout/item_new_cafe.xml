<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingVertical="16dp"
  tools:ignore="HardcodedText">

  <TextView
    android:id="@+id/tv_new_cafe_name"
    style="@style/TextLMedium"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:maxLines="1"
    android:textColor="@color/gray_900"
    app:layout_constraintEnd_toStartOf="@id/iv_new_cafe_right_arrow"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="스타벅스 강남역신분당역사점" />


  <TextView
    android:id="@+id/tv_new_cafe_address"
    style="@style/TextXsRegular"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:maxLines="1"
    android:textColor="@color/gray_400"
    app:layout_constraintEnd_toStartOf="@id/iv_new_cafe_right_arrow"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/tv_new_cafe_name"
    tools:text="스타벅스 강남구 강남대로 396" />

  <ImageView
    android:id="@+id/iv_new_cafe_right_arrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:contentDescription="Right Arrow"
    android:src="@drawable/ic_arrow_right_outlined_16"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>